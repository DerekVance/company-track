extends layout

block content
  h1= title
  h2 Client
  include includes/errors
  form(action='/new-client' method='post')
    div
      label(for='cFirst') First Name:
        input#cFirst(type='text' name='cFirst')
    div  
      label(for='cLast') Last Name:
        input#cLast(type='text' name='cLast')
    div  
      label(for='street') Street:
        input#street(type='text' name='street')
    div  
      label(for='city') City:
        input#city(type='text' name='city')
    div  
      label(for='state') State:
        input#state(type='text' name='state')
    div  
      label(for='zip') Zip:
        input#zip(type='text' name='zip')
    div
      label(for='phone') Phone:
        input#phone(type='num' name='phone')
    div
      input(type='submit' value='Add New Client')
